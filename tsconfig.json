{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist_electron",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["app/*"],
      "#/*": ["custom/*"],
      "~/*": ["lib/*"],
      "root": ["./*"],
      "core": ["core/*"]
    }
  },
  "include": ["app/**/*.vue", "custom/*.ts", "lib/*.ts"],
  "exclude": ["node_modules"]
}
