{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "release",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["app/*"],
      "#/*": ["custom/*"],
      "~/*": ["lib/*"],
      "root": ["./*"],
      "core": ["core/*"]
    }
  },
  "include": ["app/**/*.vue", "custom/*.ts", "lib/*.ts", "custom.d.ts"],
  "exclude": ["node_modules"],
  "vueCompilerOptions": {
    "plugins": ["@volar/vue-language-plugin-pug"]
  }
}
