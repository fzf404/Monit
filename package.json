{
  "name": "monit",
  "version": "0.9.0",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev --watch",
    "preview": "electron-vite preview",
    "build": "electron-vite build && electron-builder build",
    "lint:eslint": "eslint --cache --fix .",
    "lint:prettier": "prettier --cache --write .",
    "lint:stylelint": " stylelint --cache --fix **/*.scss",
    "check": "tsc -p tsconfig.node.json && vue-tsc -p tsconfig.web.json --noEmit",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@electron/notarize": "^2.2.1",
    "@fzf404/eslint-config": "^0.5.9",
    "@fzf404/prettier-config": "^0.7.0",
    "@fzf404/stylelint-config": "^0.1.3",
    "@iconify-json/ic": "^1.1.17",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@types/node": "^20.11.16",
    "@unocss/preset-icons": "^0.58.5",
    "@unocss/reset": "^0.58.5",
    "@unocss/transformer-directives": "^0.58.5",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vueuse/components": "^10.7.2",
    "@vueuse/core": "^10.7.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.2",
    "pinia": "^2.1.7",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^16.2.1",
    "typescript": "^5.3.3",
    "unocss": "^0.58.5",
    "unstorage": "^1.10.1",
    "vite": "5.0.12",
    "vue": "^3.4.15",
    "vue-i18n": "^9.9.1",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.27"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{js,ts,vue,json}": [
      "eslint --fix"
    ],
    "*.{js,ts,md,vue,yml,scss,json}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "prettier": "@fzf404/prettier-config",
  "stylelint": {
    "extends": [
      "@fzf404/stylelint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@fzf404/eslint-config"
    ]
  }
}
