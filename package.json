{
  "name": "monit",
  "version": "0.9.0",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev --watch",
    "preview": "electron-vite preview",
    "build": "electron-vite build && electron-builder build",
    "lint": "eslint --cache --fix . && stylelint --cache --fix **/*.scss",
    "check": "tsc -p tsconfig.node.json --composite false --noEmit && vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "format": "prettier --cache --write .",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^2.0.1",
    "@electron/notarize": "^2.1.0",
    "@fzf404/eslint-config": "^0.5.7",
    "@fzf404/prettier-config": "^0.7.0",
    "@fzf404/stylelint-config": "^0.1.2",
    "@iconify-json/ic": "^1.1.14",
    "@intlify/unplugin-vue-i18n": "^1.2.0",
    "@types/node": "^20.6.4",
    "@unocss/preset-icons": "^0.56.1",
    "@unocss/reset": "^0.56.1",
    "@unocss/transformer-directives": "^0.56.1",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vueuse/components": "^10.4.1",
    "@vueuse/core": "^10.4.1",
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4",
    "electron-vite": "^1.0.28",
    "eslint": "^8.50.0",
    "lint-staged": "^14.0.1",
    "pinia": "^2.1.6",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.10.3",
    "typescript": "^5.2.2",
    "unocss": "^0.56.1",
    "unstorage": "^1.9.0",
    "vite": "^4.4.9",
    "vue": "^3.3.4",
    "vue-i18n": "^9.4.1",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.13"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{js,ts,vue,json}": [
      "eslint --fix"
    ],
    "*.{js,ts,md,vue,yml,scss,json}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "prettier": "@fzf404/prettier-config",
  "stylelint": {
    "extends": [
      "@fzf404/stylelint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@fzf404/eslint-config"
    ]
  }
}
